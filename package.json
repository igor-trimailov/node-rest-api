{
  "name": "rest-api",
  "version": "1.0.0",
  "description": "Simple node/express/mongo crud boilerplate",
  "main": "index.js",
  "scripts": {
    "start": "npm run prod",
    "server": "node ./src/start",
    "server:prod": "node ./src/start",
    "dev": "NODE_ENV=development npm-run-all server",
    "prod": "NODE_ENV=production npm-run-all server:prod",
    "unit": "jest --config ./test/unit/jest.conf.js --coverage",
    "integration": "jest --config ./test/integration/jest.conf.js --coverage --detectOpenHandles --forceExit",
    "test": "npm-run-all unit integration",
    "watch": "nodemon"
  },
  "jest": {
    "testEnvironment": "node",
    "verbose": true
  },
  "author": "Igor Trimailov",
  "license": "ISC",
  "dependencies": {
    "@babel/runtime": "^7.7.6",
    "bcrypt": "^3.0.6",
    "body-parser": "^1.19.0",
    "cors": "^2.8.5",
    "express": "^4.17.1",
    "jsonwebtoken": "^8.5.1",
    "mongoose": "^5.7.7",
    "morgan": "^1.9.1",
    "npm-run-all": "^4.1.5"
  },
  "devDependencies": {
    "@babel/core": "^7.7.5",
    "@babel/plugin-transform-runtime": "^7.7.6",
    "@babel/preset-env": "^7.7.6",
    "@shelf/jest-mongodb": "^1.1.3",
    "jest": "^24.9.0",
    "nodemon": "^1.19.4",
    "supertest": "^4.0.2"
  }
}
